<% include partials/header %>
    <div class="holder">
    <% /* TODAY */ %>
    <% if ( jobs.today ) { %>
      <section class="job-group">
      
        <h2>Bugün</h2>

        <ul class="job-list">
        <% jobs.today.forEach(function (job) { %>
        <% if ( job.active ) { %>
          <li class="relative">
            <div class="label left" style="background: <%= job.category.color %>"></div>
            <a href="/?r=<%= job._id %>" class="job-info block left" target="_blank">
              <h3><%= job.title %></h3>
              <div class="details clearfix">
                <div class="date">
                  <strong><%= getTimeInWords(job.posted_at) %></strong> tarihinde eklendi
                </div>
                <div class="organization"><%= job.organization.title %></div>
                <div class="location"><%= job.organization.location %></div>
              </div>
            </a>
            <div class="clear"></div>
          </li>
        <% } %>
        <% }); %>
        </ul>

      </section>
    <% } %>

